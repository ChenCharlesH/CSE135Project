<div id="load">
  <div>G</div>
  <div>N</div>
  <div>I</div>
  <div>D</div>
  <div>A</div>
  <div>O</div>
  <div>L</div>
</div>
<div class="sidenav">
  <div style="padding-left: 4%">
  <a href="javascript:void(0)" class="closebtn">&times;</a>
<%= form_for :search_form, html: {id: "search_form", method: "get"}, action: :search do |f|%>
  <%# Generate categories %>

  <div>
  <br />
  <%= f.label "Search: " %> <br />
  <%= f.text_field :search_bar, id: :search_bar %>
  </div>
  <%= f.collection_check_boxes :category, Category.all, :id, :unique_name, :include_hidden => false do |m| %>
  <%= m.check_box class: "check_box"%> <%= m.label %> <br />
  <% end %>
  <br />
<% end %>
  </div>
</div>

<div class="openbtn">
  <a href = "javascript:void(0)">
  <span class="glyphicon glyphicon-search" aria-hidden="true">
  </span>
</a>
</div>
<div class="main">
<table class = "container">
  <thead>
    <tr>
      <th>Name</th>
      <th>SKU</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody id="search_result">
    <%= render "products/search" %>
  </tbody>
</table>
</div>
